{
  "version": "2.0.0",
  "inputs": [
    {
      "type": "promptString",
      "id": "ownerRepo",
      "description": "Repo destino en formato owner/repo (déjalo vacío si ya configuraste 'gh repo set-default')",
      "default": ""
    }
  ],
  "tasks": [
    {
      "label": "OnePack (bash) — Crear labels, milestones e issues",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "cd ${workspaceFolder}/gest-doc-issues-onepack && chmod +x scripts/*.sh 2>/dev/null || true && scripts/create_all.sh ${input:ownerRepo}"
      ],
      "problemMatcher": []
    },
    {
      "label": "OnePack (PowerShell) — Crear labels, milestones e issues",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/gest-doc-issues-onepack/scripts/create_all.ps1",
        "-Repo",
        "${input:ownerRepo}"
      ],
      "problemMatcher": []
    }
  ]
}
